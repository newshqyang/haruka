<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="50sp"
    android:orientation="horizontal">

    <RelativeLayout
        android:id="@+id/relativeLayout_search"
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_margin="6sp"
        android:layout_weight="1"
        android:background="@drawable/button_search_background">

        <Button
            android:id="@+id/button_search"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@null"
            android:gravity="left|center_vertical"
            android:paddingLeft="50sp"
            android:text="搜索文件..."
            android:textColor="@android:color/darker_gray"
            android:textSize="16sp" />

        <ImageView
            android:layout_width="40sp"
            android:layout_height="match_parent"
            android:layout_marginStart="10sp"
            android:layout_marginTop="10sp"
            android:layout_marginEnd="10sp"
            android:layout_marginBottom="10sp"
            android:src="@drawable/search_icon" />

    </RelativeLayout>

    <ImageButton
        android:id="@+id/imageButton_scan"
        android:layout_width="50sp"
        android:layout_height="match_parent"
        android:background="@android:color/transparent"
        android:foreground="?android:attr/selectableItemBackground"
        android:padding="10sp"
        android:scaleType="fitXY"
        android:src="@drawable/scan_icon" />

    <RelativeLayout
        android:layout_width="50sp"
        android:layout_height="match_parent">
        <ImageButton
            android:id="@+id/imageButton_download"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@android:color/transparent"
            android:foreground="?android:attr/selectableItemBackground"
            android:padding="10sp"
            android:scaleType="fitXY"
            android:src="@drawable/download_icon" />
        <ProgressBar
            android:id="@+id/progressBar_downloading"
            android:indeterminateTint="@android:color/holo_blue_bright"
            android:layout_width="15sp"
            android:layout_height="15sp"
            android:layout_alignParentEnd="true"
            android:visibility="invisible"/>
    </RelativeLayout>
</LinearLayout>